<?php

$servername='localhost';
$serveruser='root';
$serverpassword='';
$database='trial_1';

$conn=mysqli_connect($servername,$serveruser,$serverpassword,$database);

if(isset($_POST['Update']))
  {
      $user_id=$_POST['user_id'];
      $surname=$_POST['othername'];
      $firstname=$_POST['firstname'];
      $othername=$_POST['othername'];
      $email=$_POST['email'];
      $password=$_POST['password'];
      
      $profile_pic=$_POST['profile_pic'];

   $query ="UPDATE edit SET surname='$_POST[surname]',firstname='$_POST[firstname]',othername ='$_POST[othername]',email='$_POST[email]',password='$_POST[password]' where user_id ='$_POST[user_id]'";
    
    $run=mysqli_query($conn,$query);

      if($run) 
      {
        
         echo'<script type"text/javascript"> alert (" Data Updated") </script>';

      }
      else
      {
        echo'<script type"text/javascript"> alert(" Data Not Updated") </script>';

      }
}
  

?>

